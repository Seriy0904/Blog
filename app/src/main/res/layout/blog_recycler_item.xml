<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/blue_and_purple"
    android:elevation="3dp"
    android:gravity="start">

    <LinearLayout
        android:id="@+id/blogInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:maxLength="20"
            android:maxLines="3"
            android:minLines="1"
            android:textColor="#ebebeb"
            android:textSize="22sp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="3"
            android:minLines="1"
            android:textColor="#ebebeb"
            android:textSize="16sp"
            tools:text="Text" />

        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="IMAGE"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/itemDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="25dp"
            android:textColor="@color/black"
            tools:text="2021/06/15 16:06" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInfoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blogInfo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userPhoto"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minLines="1"
                android:paddingHorizontal="8dp"
                android:textColor="#ebebeb"
                android:textSize="18sp"
                tools:text="User" />

            <Button
                android:id="@+id/subscribe_blog_list"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/blue_and_purple"
                android:fontFamily="sans-serif-medium"
                android:gravity="top"
                android:paddingHorizontal="4dp"
                android:paddingTop="0dp"
                android:text="@string/subscribe_text"
                android:textColor="@color/red"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/like_buttonI_in_list"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@id/comments_button_in_list"
        android:layout_below="@id/userInfoList"
        android:layout_marginVertical="3dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_selector" />

    <TextView
        android:gravity="center"
        android:id="@+id/like_amount_in_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userInfoList"
        android:layout_alignBottom="@id/like_buttonI_in_list"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@id/like_buttonI_in_list"
        android:textSize="16sp"
        tools:text="43" />

    <ImageButton
        android:id="@+id/comments_button_in_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userInfoList"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="3dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/comment_image" />
</RelativeLayout>