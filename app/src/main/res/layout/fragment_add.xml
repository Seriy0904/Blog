<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addBlogWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginHorizontal="50dp"
    android:layout_marginTop="70dp"
    android:layout_marginBottom="90dp"
    android:background="@drawable/add_blog_drawable"
    android:orientation="vertical"
    tools:context=".AddFragment">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:autofillHints="Name"
        android:background="@drawable/edit_text_drawable"
        android:hint="@string/text_name_hint_resource"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10sp"
        android:singleLine="true"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:autofillHints="Text"
        android:background="@drawable/edit_text_drawable"
        android:hint="@string/text_fragment_add_resource"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10sp"
        android:textColorHint="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/clearDatabase"
            style="@style/buttons"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/red"
            android:text="@string/clear_database_add_fragmet_resource"
            app:cornerRadius="7dp" />

    </LinearLayout>

</LinearLayout>